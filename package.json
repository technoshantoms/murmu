{
	"name": "murmurations-aggregator",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "husky",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run && npm run test:e2e",
		"test:e2e": "playwright test",
		"db:generate": "pnpm exec drizzle-kit generate",
		"db:migrate": "pnpm exec wrangler d1 migrations apply murmurations-aggregator-preview --local",
		"db:migrate:preview": "pnpm exec wrangler d1 migrations apply murmurations-aggregator-preview --remote",
		"db:migrate:prod": "pnpm exec wrangler d1 migrations apply murmurations-aggregator --remote --env production",
		"generate-server-keys": "pnpm exec tsx scripts/generate-server-keys.ts"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20250823.0",
		"@eslint/compat": "^1.3.2",
		"@eslint/js": "^9.34.0",
		"@internationalized/date": "^3.9.0",
		"@lucide/svelte": "^0.515.0",
		"@paralleldrive/cuid2": "^2.2.2",
		"@playwright/test": "^1.55.0",
		"@react-email/render": "^1.3.1",
		"@sveltejs/adapter-cloudflare": "^7.2.3",
		"@sveltejs/kit": "^2.37.0",
		"@sveltejs/vite-plugin-svelte": "^6.1.3",
		"@tailwindcss/container-queries": "^0.1.1",
		"@tailwindcss/typography": "^0.5.16",
		"@tailwindcss/vite": "^4.1.12",
		"@tanstack/table-core": "^8.21.3",
		"@trivago/prettier-plugin-sort-imports": "^5.2.2",
		"@types/json-schema": "^7.0.15",
		"@types/leaflet": "^1.9.20",
		"@types/leaflet.markercluster": "^1.5.6",
		"@types/pako": "^2.0.4",
		"bits-ui": "^2.9.4",
		"clsx": "^2.1.1",
		"drizzle-kit": "^0.31.4",
		"eslint": "^9.34.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.12.3",
		"globals": "^16.3.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.0",
		"mode-watcher": "^1.1.0",
		"pako": "^2.1.0",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"svelte": "^5.39.4",
		"svelte-check": "^4.3.1",
		"svelte-sonner": "^1.0.5",
		"tailwind-merge": "^3.3.1",
		"tailwind-variants": "^1.0.0",
		"tailwindcss": "^4.1.12",
		"tsx": "^4.20.5",
		"tw-animate-css": "^1.3.8",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.44.0",
		"vite": "^7.1.7",
		"vite-plugin-devtools-json": "^1.0.0",
		"vitest": "^3.2.4",
		"wrangler": "^4.33.1"
	},
	"dependencies": {
		"@tanstack/svelte-query": "^5.90.1",
		"@ucans/ucans": "^0.12.0",
		"drizzle-orm": "^0.44.5",
		"formsnap": "^2.0.1",
		"leaflet": "^1.9.4",
		"leaflet.markercluster": "^1.5.3",
		"paneforge": "1.0.2",
		"resend": "^6.0.2",
		"uint8arrays": "^5.1.0",
		"vaul-svelte": "1.0.0-next.7"
	},
	"lint-staged": {
		"*.{ts,svelte}": [
			"pnpm format",
			"pnpm lint"
		],
		"*.{css,html,json}": [
			"pnpm format"
		]
	}
}
